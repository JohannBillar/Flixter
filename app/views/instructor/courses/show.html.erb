<br />
<section class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <br>
  <%= link_to 'Preview as student...', course_path(@course), :class => 'btn btn-warning pull-right' %>
  <br class="clearfix">
  <div class="text-center">
  	<%= link_to 'Add a new section...', new_instructor_course_section_path(@course), :class => 'btn btn-primary btn-large' %>
  </div>

  <ul>
  	<% @course.sections.each do |section| %>
  		<li>
  			<%= section.title %>
        <%= link_to 'New lessons', new_instructor_section_lesson_path(section), :class => 'pull-right btn btn-primary btn-xs' %>
        <ul>
          <% section.lessons.each do |lesson| %>
            <li>
              <em><%= lesson.title %></em>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>
        <br class="clearfix">
  		</li>
  	<% end %>	
  </ul>
</section>