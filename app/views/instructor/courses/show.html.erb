<script>
  $(function(){
    $('.lessons').sortable({
      update: function(event, ui){
        $.ajax({
          type: 'PUT',
          url: ui.item.data('update-url'),
          dataType: 'json',
          data: {lesson: {row_order_position: ui.item.index()}}
        });
      } 
    });
    $('.sections').sortable({
      update: function(event, ui){
        $.ajax({
          type: 'PUT',
          url: ui.item.data('update-url'),
          dataType: 'json',
          data: {section: {row_order_position: ui.item.index()}}
        });
      } 
    });
  }); //end ready  
</script>

<br />

<section class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= current_course.title %></h1>
  <%= image_tag current_course.image, :class => 'img-responsive' %>
    <br>
  <%= link_to 'Preview as student...', course_path(current_course), :class => 'btn btn-warning pull-right' %>
    <br class="clearfix">
  <div class="text-center">
  	<%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), :class => 'btn btn-primary btn-large' %>
  </div>

  <ul class="sections">
  	<% current_course.sections.rank(:row_order).each do |section| %>
  		<li data-update-url=<%= instructor_section_path(section) %> class="section-li" >
        <div class="header">
          <span class="glyphicon glyphicon-list"></span>
  			  <%= section.title %>
        </div>
        <%= link_to 'New lessons', new_instructor_section_lesson_path(section), :class => 'pull-right btn btn-primary btn-xs' %>
        <br class="clr">
        <br class="clr">
        <ul class="lessons">
          <% section.lessons.rank(:row_order).each do |lesson| %>
            <li data-update-url=<%= instructor_lesson_path(lesson) %>>
              <div class="col-xs-1">
                <br>  
                <span class="glyphicon glyphicon-list"></span>
              </div>
              <div class="col-xs-11 text-center">
                <p>
                  <strong><%= lesson.title %></strong>
                </p>
                <p>
                  <%= lesson.subtitle %>
                </p>
              </div>
              <br class="clr">    
            </li>
          <% end %>
        </ul>
        <br class="clearfix">
  		</li>
  	<% end %>	
  </ul>

</section>

